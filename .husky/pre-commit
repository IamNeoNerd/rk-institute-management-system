#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# RK Institute Management System - Pre-commit Quality Gates
# Enforces zero-error policy to prevent technical debt re-accumulation

echo "ğŸ” Running pre-commit quality gates..."

# 1. TypeScript Compilation (ZERO TOLERANCE)
echo "ğŸ“ Checking TypeScript compilation..."
if ! npx tsc --noEmit; then
  echo "âŒ TypeScript compilation failed! Fix all TypeScript errors before committing."
  echo "ğŸ’¡ Run 'npx tsc --noEmit' to see detailed errors."
  exit 1
fi
echo "âœ… TypeScript compilation passed"

# 2. Lint Staged Files
echo "ğŸ” Running lint-staged..."
npx lint-staged

# 3. Quick Test Run (if tests exist)
echo "ğŸ§ª Running quick test validation..."
if npm run test:run --silent > /dev/null 2>&1; then
  echo "âœ… Tests passed"
else
  echo "âš ï¸  Some tests failed, but allowing commit (tests are not blocking)"
fi

echo "ğŸ‰ All quality gates passed! Commit allowed."
